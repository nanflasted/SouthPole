<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="neutralspacedev.southpole.GamePlay">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tileGrid"
        android:layout_above="@+id/weather">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton"
                android:layout_column="0"
                android:layout_weight="1"
                android:background="@drawable/snowlight" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton2"
                android:background="@drawable/snowlight"
                android:layout_column="1"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton3"
                android:background="@drawable/snowlight"
                android:layout_column="2"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton4"
                android:background="@drawable/snowlight"
                android:layout_column="3"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton5"
                android:background="@drawable/snowlight"
                android:layout_column="4"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton6"
                android:background="@drawable/snowlight"
                android:layout_column="0"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton7"
                android:background="@drawable/snowlight"
                android:layout_column="1"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton8"
                android:background="@drawable/snowlight"
                android:layout_column="2"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton9"
                android:background="@drawable/snowlight"
                android:layout_column="3"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton10"
                android:background="@drawable/snowlight"
                android:layout_column="4"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton11"
                android:background="@drawable/snowlight"
                android:layout_column="0"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton12"
                android:background="@drawable/snowlight"
                android:layout_column="1"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton13"
                android:background="@drawable/snowlight"
                android:layout_column="2"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton14"
                android:background="@drawable/snowlight"
                android:layout_column="3"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton15"
                android:background="@drawable/snowlight"
                android:layout_column="4"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton16"
                android:background="@drawable/snowlight"
                android:layout_column="0"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton17"
                android:background="@drawable/snowlight"
                android:layout_column="1"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton18"
                android:background="@drawable/snowlight"
                android:layout_column="2"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton19"
                android:background="@drawable/snowlight"
                android:layout_column="3"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton20"
                android:background="@drawable/snowlight"
                android:layout_column="4"
                android:layout_weight="1" />
        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton21"
                android:background="@drawable/snowlight"
                android:layout_column="0"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton22"
                android:background="@drawable/snowlight"
                android:layout_column="1"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton23"
                android:background="@drawable/snowlight"
                android:layout_column="2"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton24"
                android:background="@drawable/snowlight"
                android:layout_column="3"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton25"
                android:background="@drawable/snowlight"
                android:layout_column="4"
                android:layout_weight="1" />
        </TableRow>


    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Snowy, 20 degrees"
        android:id="@+id/weather"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tileGrid"
        android:layout_alignStart="@+id/tileGrid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Condition"
        android:id="@+id/cond"
        android:layout_below="@+id/tileGrid"
        android:layout_toRightOf="@+id/weather"
        android:layout_alignRight="@+id/tileGrid"
        android:layout_alignEnd="@+id/tileGrid"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ticker"
        android:id="@+id/ticker"
        android:layout_below="@+id/weather"
        android:layout_alignLeft="@+id/weather"
        android:layout_alignStart="@+id/weather"
        android:layout_alignRight="@+id/cond"
        android:layout_alignEnd="@+id/cond" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AP Left"
        android:id="@+id/ap"
        android:layout_below="@+id/ticker"
        android:layout_alignLeft="@+id/ticker"
        android:layout_alignStart="@+id/ticker"
        android:layout_alignRight="@+id/cond"
        android:layout_alignEnd="@+id/cond" />


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/mbutton0"
                android:layout_column="0"
                android:layout_weight="1"
                android:text="Next Message" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="UP"
                android:id="@+id/mbutton1"
                android:layout_column="1"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Clear Messages"
                android:id="@+id/mbutton2"
                android:layout_column="2"
                android:layout_weight="1" />

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="LEFT"
                android:id="@+id/mbutton3"
                android:layout_column="0"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Status Report"
                android:id="@+id/mbutton4"
                android:layout_column="1"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="RIGHT"
                android:id="@+id/mbutton5"
                android:layout_column="2"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Take Action"
                android:id="@+id/mbutton6"
                android:layout_column="0"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="DOWN"
                android:id="@+id/mbutton7"
                android:layout_column="1"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Rest"
                android:id="@+id/mbutton8"
                android:layout_column="2"
                android:layout_weight="1" />

        </TableRow>


    </TableLayout>

</RelativeLayout>
